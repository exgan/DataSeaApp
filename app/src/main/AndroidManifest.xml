<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DataSeaApp"
        tools:targetApi="31">
        <receiver
            android:name=".dataSea.AlarmReceiver">
        </receiver>

        <activity
            android:name=".dataSea.View.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".dataSea.View.SignupActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".dataSea.View.LoginActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".dataSea.View.UpdateActivity"
            android:exported="false" />
        <activity
            android:name=".dataSea.View.MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".dataSea.View.CreateActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
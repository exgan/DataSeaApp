<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dataSea.View.CreateActivity"
    android:background="@color/ActivityBackgroundColor">

    <EditText
        android:id="@+id/edTitle"
        android:layout_width="375dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="69dp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:paddingBottom="21dp"
        android:paddingTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000000"
        android:background="@drawable/tv_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSave" />

    <EditText
        android:id="@+id/edContent"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="61dp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:paddingBottom="27dp"
        android:paddingTop="20dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="text|textMultiLine"
        android:textColor="#000000"
        android:background="@drawable/tv_border"
        app:layout_constraintEnd_toEndOf="@+id/edTitle"
        app:layout_constraintStart_toStartOf="@+id/edTitle"
        app:layout_constraintTop_toBottomOf="@+id/edTitle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Заметка"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/edTitle"
        app:layout_constraintStart_toStartOf="@+id/edTitle" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Описание"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/edContent"
        app:layout_constraintStart_toStartOf="@+id/edContent" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        android:onClick="onClickSave"
        android:text="Готово"
        android:textSize="20sp"
        android:backgroundTint="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ButtonCancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:onClick="onClickCancel"
        android:text="Отменить"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_textTime"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:paddingStart="14dp"
        android:paddingBottom="11dp"
        android:paddingTop="10dp"
        android:textColor="#000000"
        android:background="@drawable/tv_border"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/edTitle"
        app:layout_constraintTop_toBottomOf="@+id/edContent"
        tools:text="@tools:sample/date/ddmmyy" />

    <ImageView
        android:id="@+id/buttonTime"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/baseline_edit_calendar_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_textTime"
        app:layout_constraintEnd_toEndOf="@+id/edTitle"
        app:layout_constraintTop_toTopOf="@+id/tv_textTime" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Дата"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/tv_textTime"
        app:layout_constraintStart_toStartOf="@+id/tv_textTime" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_textTime">

        <ImageView
            android:id="@+id/red_priority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_shape"
            android:src="@drawable/baseline_done_24"
            android:layout_marginEnd="10dp"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="165dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Важно, срочно"

            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="561dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/green_priority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/green_shape"
            android:layout_marginEnd="10dp"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="165dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Срочно, не важно"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="561dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/tv_textTime">

        <ImageView
            android:id="@+id/yellow_priority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/yellow_shape"
            android:layout_marginEnd="10dp"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="165dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Важно, не срочно"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="561dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:id="@+id/gray_priority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/gray_shape"
            android:layout_marginEnd="10dp"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="165dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Не срочно, не важно"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="561dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>